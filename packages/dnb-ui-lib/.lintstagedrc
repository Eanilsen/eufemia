{
  "linters": {
    "*.js": [
      "yarn prettier:js",
      "yarn lint:js",
      "git add"
    ],
    "*.scss": [
      "yarn prettier:styles",
      "git add"
    ],
    "*.{js,scss}": [
      "yarn lint:styles",
      "git add",
      "yarn test:staged"
    ],
    "*.{json,md}": [
      "yarn prettier:other",
      "git add"
    ]
  }
}
