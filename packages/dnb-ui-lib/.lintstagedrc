{
  "linters": {
    "*.js": [
      "yarn test:staged",
      "yarn prettier:js",
      "yarn lint:js",
      "git add"
    ],
    "src/*.scss": [
      "yarn prettier:styles",
      "git add"
    ],
    "src/*.{js,scss}": [
      "yarn lint:styles",
      "git add"
    ],
    "*.{json,md}": [
      "yarn prettier:other",
      "git add"
    ]
  }
}
