{
  "linters": {
    "*.js": [
      "yarn test:staged",
      "yarn prettier:js",
      "yarn lint:js",
      "git add"
    ],
    "*.{js,css}": [
      "yarn prettier:style",
      "yarn lint:styles",
      "git add"
    ],
    "*.{json,md}": [
      "yarn prettier:other",
      "git add"
    ]
  }
}
