{
  "private": true,
  "name": "dnb-design-system-portal",
  "description": "DNB Design System Portal",
  "license": "SEE LICENSE IN LICENSE FILE",
  "author": "Tobias HÃ¸egh",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "gatsby build",
    "build:fresh": "rm -rf .cache && rm -rf ./public/** && gatsby build",
    "build:stage": "yarn build --prefix-paths",
    "precommit": "lint-staged",
    "copy-assets": "mkdir -p ./public && cp -R ../dnb-ui-lib/src/assets ./public/assets/",
    "dev": "nodemon --exec 'gatsby develop' -w 'gatsby-node.js' -w 'gatsby-config.js'",
    "deploy": "yarn make-ui-lib-pages && yarn build --prefix-paths && babel-node ./scripts/deploy.js && say Finished Deploying",
    "deploy:fast": "yarn build --prefix-paths && babel-node ./scripts/deploy.js",
    "postinstall:disabled": "yarn startup",
    "lint": "eslint --quiet ./src",
    "lint-staged": "lint-staged",
    "lint:fix": "yarn lint --fix",
    "lint:style": "stylelint ./src/**/*.{js,css}",
    "make-ui-lib-pages": "babel-node ./src/uilib/scripts/makeDemosFactory.js && yarn prettier:components",
    "make-ui-lib-pages:dev": "nodemon --exec 'yarn make-ui-lib-pages' -e js -w '**/makeDemosFactory.js' -w '**/tasks/*' -w '**/Template.js'  -w '**/template.md'",
    "reset": "cd ../../ && yarn reset && cd - && yarn startup",
    "serve": "live-server public --watch --no-browser --port=8001",
    "start": "DEBUG=gatsby:query-watcher gatsby develop",
    "startup": "cd ../dnb-ui-lib/ && yarn startup && cd - && yarn make-ui-lib-pages",
    "story": "start-storybook -p 3002",
    "test": "jest --watch",
    "test:staged": "jest --bail --findRelatedTests",
    "test:update": "jest --updateSnapshot",
    "prettier:all": "yarn prettier:package && yarn prettier:fix",
    "prettier:components": "prettier --loglevel warn --config .prettierrc --write './src/uilib/{components,patterns}/**/*.{js,md}' './src/pages/uilib/{components,elements,patterns}/*.{js,md}'",
    "prettier:diff": "prettier --config .prettierrc --list-different '{scripts,stories,src}/**/*.{js,md}'",
    "prettier:fix": "prettier --loglevel warn --config .prettierrc --write '{scripts,stories,src}/**/*.{js,md}'",
    "prettier:package": "prettier-package-json --write ./package.json"
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "dnb-ui-lib": "*",
    "prop-types": "^15.6.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@mdx-js/mdx": "^0.15.5",
    "@mdx-js/tag": "^0.15.0",
    "@storybook/react": "^3.4.11",
    "autoprefixer": "^9.3.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-emotion": "^9.2.11",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "camelcase": "^5.0.0",
    "classnames": "^2.2.6",
    "clean-html": "^1.5.0",
    "color": "^3.1.0",
    "del": "^3.0.0",
    "emotion": "^9.2.12",
    "emotion-server": "^9.2.12",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.7.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "fs-extra": "^7.0.0",
    "gatsby": "^2.0.31",
    "gatsby-link": "^2.0.5",
    "gatsby-mdx": "^0.2.0",
    "gatsby-plugin-catch-links": "^2.0.5",
    "gatsby-plugin-emotion": "^2.0.5",
    "gatsby-plugin-offline": "^2.0.9",
    "gatsby-plugin-postcss": "^2.0.0",
    "gatsby-plugin-react-helmet": "^3.0.0",
    "gatsby-plugin-sass": "^2.0.1",
    "gatsby-plugin-sharp": "^2.0.8",
    "gatsby-remark-images": "^2.0.4",
    "gatsby-source-filesystem": "^2.0.5",
    "gh-pages": "^2.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "jest-emotion": "^9.2.11",
    "jest-raw-loader": "^1.0.1",
    "lint-staged": "^7.3.0",
    "live-server": "^1.2.0",
    "mime": "^2.3.1",
    "nodemon": "^1.18.4",
    "ora": "^3.0.0",
    "postcss-calc": "^7.0.1",
    "postcss-custom-properties": "^8.0.8",
    "postcss-preset-env": "^6.2.0",
    "prettier": "^1.14.3",
    "prettier-package-json": "^2.0.1",
    "pretty": "^2.0.0",
    "prism-react-renderer": "^0.1.4",
    "raw-loader": "^0.5.1",
    "react-docgen": "^2.21.0",
    "react-emotion": "^9.2.12",
    "react-fake-props": "^0.2.1",
    "react-helmet": "^5.2.0",
    "react-live": "^1.12.0",
    "stylelint": "^9.6.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.0",
    "system-components": "^3.0.1"
  },
  "lint-staged": {
    "linters": {
      "*.{js}": [
        "yarn lint:fix",
        "git add",
        "yarn test:staged"
      ],
      "*.{js,css}": [
        "yarn prettier:all",
        "yarn lint:style",
        "git add"
      ],
      "*.{json,md}": [
        "yarn prettier:all",
        "git add"
      ]
    }
  }
}
